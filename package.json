{
	"name": "zacre",
	"description": "Modular website builder",
	"version": "0.2.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"db:reset": "prisma migrate reset --force",
		"db:push": "prisma db push",
		"db:seed": "esbuild ./prisma/seed.ts --bundle --minify --platform=node --format=esm --main-fields=module,main --outdir=dist --packages=external && prisma db seed",
		"db:studio": "prisma studio",
		"dev": "concurrently -r --handle-input --default-input-target 0  \"tsx watch src/index.tsx --clear-screen=false   \" \"npx tailwindcss -i ./src/style.css -o ./public/style.css --watch\"  \"esbuild ./src/client.ts --bundle --platform=browser --metafile=dist/client-bundle.meta.json --sourcemap --minify --watch --outbase=public --entry-names=main-[hash] --outdir=public\" "
	},
	"prisma": {
		"seed": "node dist/seed.js"
	},
	"keywords": [],
	"author": "pkunv",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^6.15.0",
		"@tailwindcss/cli": "^4.1.13",
		"better-auth": "^1.3.8",
		"compression": "^1.8.1",
		"concurrently": "^9.2.1",
		"cors": "^2.8.5",
		"lucide": "^0.542.0",
		"preact-render-to-string": "^6.6.1",
		"tailwindcss": "^4.1.13",
		"ultimate-express": "^1.4.10",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/node": "^24.3.1",
		"daisyui": "^5.1.7",
		"dotenv": "^17.2.2",
		"esbuild": "^0.25.9",
		"prettier": "^3.6.2",
		"prisma": "^6.15.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2"
	}
}
